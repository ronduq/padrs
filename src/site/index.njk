{% import "jobSearchForm.njk" as search with context %}

<div class="bg-midnight colour-white pb-l">
  <div class="container">
    <div class="row">
      <div class="col col-lg-9 col-12 pb-m">

        <div class="hero">
          <span class="hero__intro">Digital careers at PA</span>
          <h1 class="hero__title h1">There’s never been a better time <br> to join the Digital team at PA</h1>
        </div>

        {% if jobs.length > 3 %}
          <h2 class="h4 colour-rose mb-s">{{ jobs.length }} open role{% if jobs.length > 1 %}s{% endif %}</h2>
          {{ search.jobSearchForm('false') }}
        {% endif %}
        {% if jobs.length < 4 %}
          <a href="{{ "/jobs" | url }}"><button class="button">View our open roles</button></a>
        {% endif %}

      </div>
    </div>
  </div>
</div>

<div class="container mt-l container--editorial">
