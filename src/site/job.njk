<div class="container">
<div class="row">
  <div class="col col-md-10 col-12 offset-md-1">
    <div class="banner mt-l mb-l">
      <h2 class="h3">Still have questions?</h2>
      <a href="{{ '/faqs' | url }}" class="button button--outline-midnight">View our FAQs</a>
    </div>
  </div>
  
  <div class="col col-12 offset-md-1 col-md-7 mb-xl">
    {% for f in job.description %}
      {% if f.key == "diversity-statement" %}
        <h2 class="h4">{{ f.title }}</h2>
        {{ f.content | safe }}
      {% endif %}
    {% endfor %}
  </div>
</div>
</div>

{% set relatedJobs = (job | relatedJobs) %}
{% if relatedJobs.length > 0 %}
  <div class="container">
    <div class="row">
      <div class="col-12 mb-m">
        <div class="heading mb-m">
          <h2 class="h3">More roles at PA Digital</h2>
          <a class="button button--outline-midnight" href="{{ '/jobs' | url }}">View all roles</a>
        </div>
        <div class="card-group">
          {% for j in relatedJobs %}
            <div class="card card__hover-link">
              <span class="card__intro">{{ j.capability }}</span>
              <h3 class="h4 mb-m"><a href="{{ ['/jobs', ([(j.title | slug), j.id] | join('-'))] | join('/') | url }}">{{ j.title }}</a></h3>
              <span class="card__location">
                {{ j.office }}, {{ j.city }}
                <svg viewBox="0 0 100 100" class="icon icon--rose icon--small">
                  <use xlink:href="#chevronRight"></use>
                </svg>
              </span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
