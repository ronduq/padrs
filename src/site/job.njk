---
title: Job
layout: default
pagination:
    data: jobs
    size: 1
    alias: job
permalink: "/jobs/{{ job.title | slug }}-{{ job.id }}/"
---

<script type="application/ld+json">
  {
    "@context" : "https://schema.org/",
    "@type" : "JobPosting",
    "title" : "{{ job.title}}",
    "description" : "{{ job.summary }}",
    "employmentType" : "{{ job.length }}, {{ job.contract }}",
    "hiringOrganization" : {
      "@type" : "Organization",
      "name" : "PA Consulting",
      "sameAs" : "https://www.paconsulting.com",
      "logo" : "https://www.paconsulting.com/Static/images/svgs/logo.svg"
    }
  }
</script>

<div class="bg-midnight colour-white pb-m">
  <div class="container">
    <div class="row">
      <div class="col col-12 col-lg-10">

