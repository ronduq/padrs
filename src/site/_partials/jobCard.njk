<div class="card" data-search-id="{{ job.id }}">
  <h3 data-search>{{ job.title }}</h3>
  <a href="/jobs/{{ job.title | slug }}-{{ job.id }}">View role</a>
  <p>{{ job.summary }}</p>
  <p data-search-location="{{ job.city }}">{{ job.location }}</p>
  <p data-search-capability>{{ job.capability }}</p>
  <!--googleoff: all-->
  <p data-search-fulltext hidden>{{ job.fulltext }}</p>
  <!--googleon: all-->
</div>
