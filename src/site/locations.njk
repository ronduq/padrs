{% set belfastJobs = ('Belfast' | jobsCountByCity) %}
{% set londonJobs = ('London' | jobsCountByCity) %}

<div class="bg-midnight colour-white pb-xl mb-l">
  <div class="container">
    <div class="row">
      <div class="col col-10 pb-l">
